{
  "compilerOptions": {
    "baseUrl": "./",          
    "paths": {
      "@/*": ["src/*"]       
    },
    "types": ["node"],       
    "lib": ["dom", "dom.iterable", "esnext"],  
    "target": "es6",         
    "module": "esnext",       
    "allowJs": true,        
    "skipLibCheck": true,     
    "strict": true,           
    "noEmit": true,      
    "esModuleInterop": true,  
    "moduleResolution": "bundler",  
    "resolveJsonModule": true, 
    "isolatedModules": true,  
    "jsx": "preserve",        
    "incremental": true,      
    "plugins": [
      {
        "name": "next"        
      }
    ]
  },
  "include": [
    "next-env.d.ts",         
    "**/*.ts",              
    "**/*.tsx",              
    ".next/types/**/*.ts"    
  ],
  "exclude": [
    "node_modules"           
  ]
}
